include template/header
include template/footer
include ../blocks/**/*
- const alias = "m"
doctype html
html(lang='ru')
    +doc-header
    body
        +main-header
        +breadcrumbs(['Корзина', 'Оформление заказа'])
        +order-layout
            +e.main
                +order-form
            +e.ASIDE.sidebar
                +e.login-appeal
                    +login-appeal
                +e.delivery-time
                    .input
                        +custom-checkbox('delivery-toggle', 'deliveryToggle', 'Доставка ко времени')
                    .input
                        +custom-input('text', 'delivery-date', 'delivetyDate', 'Дата доставки', '21.09.2020')
                    .input
                        +custom-input('text', 'delivery-time', 'delivetyTime', 'Время доставки', '15:30')
                            .custom-input__tip В выбранную дату можно оформить заказ с доставкой на время от 16:00 до 22:00.
                +e.A.next.disabled(href='#')
                    | Далее
                    .icon
                        +icon('r-arrow')
        +main-footer
        +doc-footer