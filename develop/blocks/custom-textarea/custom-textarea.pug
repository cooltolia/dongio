mixin custom-textarea(id, name, label, placeholder, required, error, isValid)
    +b.custom-textarea(class=isValid ? 'valid' : '')
        if (label)
            +e.LABEL.label(for=id)= label
                if (required)
                    span *
        if (required)
            +e.TEXTAREA.input(id=id name=name placeholder=placeholder required)&attributes(attributes)
                block
        else
            +e.TEXTAREA.input(id=id name=name placeholder=placeholder)&attributes(attributes)
                block
        if (error)
            +e.SPAN.error.error= error