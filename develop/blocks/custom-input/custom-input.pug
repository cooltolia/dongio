mixin custom-input(inputType, id, name, label, placeholder, required, error, isValid)
    +b.custom-input(class=isValid ? 'valid' : '')
        if (label)
            +e.LABEL.label(for=id)= label
                if (required)
                    span *
        if (required)
            +e.INPUT.input(type=inputType id=id name=name placeholder=placeholder required)&attributes(attributes)
        else
            +e.INPUT.input(type=inputType id=id name=name placeholder=placeholder)&attributes(attributes)
        if (error)
            +e.SPAN.error.error= error
        block